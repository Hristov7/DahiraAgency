@model IEnumerable<DahiraAgency.Data.Destination>

@{
    ViewBag.Title = "Admin - Destinations";
}

<h2>Destinations Management</h2>

<a asp-action="Create">Create New Destination</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var destination in Model)
        {
            <tr>
                <td>@destination.Name</td>
                <td>@destination.Description</td>
                <td>@destination.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@destination.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@destination.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
